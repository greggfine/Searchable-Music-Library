		 	// 	console.log(this)
		 	var song = 'http://localhost:5000/audio/advil_gff5.mp3';
			Spectrum.load(song);
			// Spectrum.load('Advair_gff2a.mp3');
			downloader.setAttribute('href', song);
			// downloader.setAttribute('href', 'Advair_gff2a.mp3');
		 	// });



	</script>


