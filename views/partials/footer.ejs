			 };

			 var downloader = document.getElementById("downloader");

			 // Create an instance of wave surfer with its configuration
			 var Spectrum = WaveSurfer.create({
			     container: '#waveform',
			     waveColor: '#darkgrey',
			     // waveColor: '#C9DD4B',
			     progressColor: '#61892f',
			     cursorColor: '#999999'
			     // scrollParent: true
			 });

