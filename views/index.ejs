	<div class="table-responsive track-cms">
		<table class="table table-striped table-bordered table-hover table-sm">
		  <thead class="thead-dark">
		    <tr>
		      <th scope="col">ID</th>
		      <th scope="col">Track Name</th>
		      <th scope="col">Genre</th>
		      <th scope="col">Date Added</th>
		      <th scope="col">Edit</th>
		      <th scope="col">Delete</th>
		    </tr>
		  </thead>
		  <% if(files){ %>
		<% files.forEach(function(file) {%>

				<% if(file.isImage) { %>
					<img src="image/<%=file.filename%>" alt="">
				<%} else { %>
				<tbody>
				  <tr>
				    <th scope="row"><%= file.metadata.id %></th>
						<td><%= file.filename %></td>
						<td><%= file.metadata.genre %></td>
						<td><%= file.metadata.available %></td>
						<td><%= file.metadata.length %></td>
						<td><%= file.metadata.bpm %></td>
						<td><a href="/files/<%=file.filename%>/edit"><i class="fa fa-pencil edit-button"></i> </a></td>
						<td><form method="POST" action="/files/<%=file._id%>?_method=DELETE"> <button class="trash-button"><i class="fa fa-trash"></i></button></form></td>
						
						
						
						
					
				  </tr>    


	
				<% } %>%>



		
				    

	

		<% })%>
	<% } else { %>
		<p>No files to show</p>
	<% } %>


	  </tbody>
	</table>

<% include partials/footer  %>


